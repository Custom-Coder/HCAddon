{
  "schemaVersion": 1,
  "id": "hcaddon",
  "version": "${version}",
  "name": "HCAddon",
  "description": "HCAddon addon for Hex Casting",
  "authors": [
    "Custom-Coder"
  ],
  "contact": {
    "homepage": "https://custom-coder.github.io/HCAddon",
    "sources": "https://github.com/Custom-Coder/HCAddon"
  },
  "license": "MIT",
  "icon": "assets/hcaddon/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [{
      "adapter": "kotlin",
      "value": "io.github.custom_coder.hcaddon.fabric.FabricHcaddon"
    }],
    "client": [{
      "adapter": "kotlin",
      "value": "io.github.custom_coder.hcaddon.fabric.FabricHcaddonClient"
    }],
    "server": [{
      "adapter": "kotlin",
      "value": "io.github.custom_coder.hcaddon.fabric.FabricHcaddonServer"
    }],
    "fabric-datagen": [{
      "adapter": "kotlin",
      "value": "io.github.custom_coder.hcaddon.fabric.datagen.FabricHcaddonDatagen"
    }],
    "modmenu": [{
      "adapter": "kotlin",
      "value": "io.github.custom_coder.hcaddon.fabric.FabricHcaddonModMenu"
    }]
  },
  "mixins": [
    "hcaddon-common.mixins.json",
    "hcaddon-fabric.mixins.json"
  ],
  "depends": {
    "minecraft": "${versions.minecraft}",
    "fabricloader": ">=${versions.fabric_loader}",
    "fabric-api": ">=${versions.fabric_api}",
    "fabric-language-kotlin": ">=${versions.kotlin_fabric}",
    "architectury": ">=${versions.architectury}",
    "hexcasting": ">=${versions.hexcasting_dependency}",
    "cloth-config": ">=${versions.clothConfig}"
  },
  "suggests": {
    "modmenu": ">=${versions.modMenu}"
  }
}
